<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments" style="width: 30%; margin: 25px auto;">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" placeholder="Text"> 
            </div>
            <div class="form-group">
              <button class="btn btn-large btn-default btn-block btn-primary">Submit !</button> 
           </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>




<% include ../partials/footer %>