<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <p class="btn btn-primary btn-large"><a href="/campgrounds/new">Add a new campground</a></p>
        </div>
    </header>
    
    <div class="row text-center">
        <h3>Our most popular campgrounds</h3>
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6 campground-card">
                <div class="thumbnail">
                     <img src="<%= campground.image; %>" >
                </div>
                <div class="caption">
                     <h4><%= campground.name; %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </p>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>